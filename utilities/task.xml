<?xml version="1.0" encoding="utf-8" ?>
<div class="card my-2">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <h4 class="task-title card-title">Task Title</h4>
            <div>
                <button data-bs-toggle="modal" data-bs-target="#task-info-modal" id="edit-task-button" class="btn btn-secondary" type="button"><i class="bi bi-pencil-square"></i></button>
                <button data-bs-toggle="modal" data-bs-target="#delete-task-modal" id="delete-task-button" class="btn btn-danger" type="button"><i class="bi bi-trash-fill"></i></button>
            </div>
        </div>
        <div class="card-text mt-3">
            <div class="task-due-date">Due Date: <span class="task-due-date-data"></span></div>            
            <div class="task-status">Task Status: <span class="task-status-data"></span></div>
            <div class="task-length">Task Length: <span class="task-length-data"></span></div>
        </div>
    </div>
</div>






